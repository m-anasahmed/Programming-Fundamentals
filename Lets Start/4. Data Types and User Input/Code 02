// Basic Code to understand the operators
// Code 01
#include <iostream>
using namespace std;

int main() {
    int a = 10;
    int b = 5;

    // Addition
    cout << "Addition: " << a + b << endl;

    // Subtraction
    cout << "Subtraction: " << a - b << endl;

    // Multiplication
    cout << "Multiplication: " << a * b << endl;

    // Division
    cout << "Division: " << a / b << endl;

    // Modulus
    cout << "Modulus: " << a % b << endl;

    return 0;
}

// Code 02
// This is how we use pow function from a header file called "cmath"
#include <iostream>
#include <cmath>
using namespace std;

int main() {
    double base = 2.0;
    double exponent = 3.0;

    // Power
    cout << "Power: " << pow(base, exponent) << endl;

    return 0;
}

// Code 03
// This is how we use Assignments operators.
#include <iostream>
using namespace std;

int main() {
    int a = 5;

    // +=, -=, *=, /=
    a += 3;
    cout << "+=: " << a << endl;

    a -= 2;
    cout << "-=: " << a << endl;

    a *= 4;
    cout << "*=: " << a << endl;

    a /= 2;
    cout << "/=: " << a << endl;

    return 0;
}

// Code 04 
// This is how we use relational operators (The most important code).
