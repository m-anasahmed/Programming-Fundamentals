// Code 01 
// For Boolean Values
#include <iostream>
using namespace std;

int main() {
    bool isTrue = true;
    bool isFalse = false;

    cout << "isTrue: " << isTrue << endl;
    cout << "isFalse: " << isFalse << endl;

    return 0;
}

// Code 02
// For Character type
#include <iostream>
using namespace std;

int main() {
    char grade = 'A';
    cout << "Grade: " << grade << endl;

    return 0;
}

// Code 03
// Code for using Integer Type.
#include <iostream>
using namespace std;

int main() {
    int number = 10;
    cout << "Number: " << number << endl;

    return 0;
}

// Code 04
// Code for using Floating point type.
#include <iostream>
using namespace std;

int main() {
    float floatValue = 3.14f;
    double doubleValue = 3.14159;

    cout << "Float Value: " << floatValue << endl;
    cout << "Double Value: " << doubleValue << endl;

    return 0;
}

// Code 05
// Code for Valueless (Void)
#include <iostream>
using namespace std;

int main() {
    // Void type does not hold any value
    // It is commonly used for functions that do not return any value
    cout << "Void type does not hold any value." << endl;

    return 0;
}

